<PlusConfiguration version="2.8" PlusRevision="Plus-2.8.0.62873a16 - Win32">
  <DataCollection StartupDelaySec="1.0" >
    <DeviceSet
      Name="Telemed C5 90mm Ascension EM - nephrostomy - Lily and Emese project"
      Description="EM sensors: 1 Probe, 2 Needle, 3 Reference . Uses Telemed calibration, valid at 90 mm depth. Recording is supported. Tracking data is continuously recorded."
    />
    
    <Device
      Id="TrackerDevice"
      Type="Ascension3DG"
      AcquisitionRate="50"
      LocalTimeOffsetSec="0.0"
      FilterAcWideNotch="1"
      ToolReferenceFrame="Tracker">
      <DataSources>
        <DataSource Type="Tool" Id="Probe" BufferSize="500" PortName="0" AveragedItemsForFiltering="20" />
        <DataSource Type="Tool" Id="Needle" BufferSize="500" PortName="1" AveragedItemsForFiltering="20" />
        <DataSource Type="Tool" Id="Reference" BufferSize="500" PortName="2" AveragedItemsForFiltering="20" />
      </DataSources>
      <OutputChannels>
        <OutputChannel Id="TrackerStream">
          <DataSource Id="Probe" />
          <DataSource Id="Needle" />
          <DataSource Id="Reference" />
        </OutputChannel>
      </OutputChannels>
    </Device>

    <Device
      Id="VideoDevice"
      LocalTimeOffsetSec="0.0"
      Type="TelemedVideo"
      FrameSize="768 512"
      DepthMm="90">
      <DataSources>
        <DataSource 
          Type="Video"
          Id="Video"
          PortUsImageOrientation="MN"
		  />
      </DataSources>
      <OutputChannels>
        <OutputChannel Id="VideoStream" VideoDataSourceId="Video" />
      </OutputChannels>
    </Device>

    <Device 
	  Id="TrackedVideoDevice" 
	  Type="VirtualMixer">
      <InputChannels>
        <InputChannel Id="TrackerStream" />
        <InputChannel Id="VideoStream" />
      </InputChannels>
      <OutputChannels>
        <OutputChannel Id="TrackedVideoStream" />
      </OutputChannels>
    </Device>
    
  <!-- Needed to record the information to be use after without physical connections -->
    <Device 
      Id="CaptureDevice"
      Type="VirtualCapture"
      BaseFilename="USRecording.mhd"
      EnableCapturingOnStart="FALSE"
      EnableFileCompression="FALSE" >
      <InputChannels>
        <InputChannel Id="TrackedVideoStream" />
      </InputChannels>
    </Device>

    <Device
      Id="CaptureDeviceTracker"
      Type="VirtualCapture"
      BaseFilename="USTracking.mhd"
      EnableCapturingOnStart="FALSE"
      EnableFileCompression="FALSE"
      RequestedFrameRate="15"
      FrameBufferSize="450" >
      <InputChannels>
        <InputChannel Id="TrackerStream" />
      </InputChannels>
    </Device>
  </DataCollection>
  
  <CoordinateDefinitions>
<!-- Placeholder: Add your recalibrated matrix here after the calibration procedure -->
    <Transform From="Image" To="Probe" Matrix=" 
    0.000688009 -0.184485 -0.00246885 167.197 
    0.184295 0.000804103 -0.00872824 -70.1085 
    0.00873816 -0.00243352 0.18428 21.6109 
    0 0 0 1 " 
    />
    <Transform From="NeedleTip" To="Needle" Matrix=" 
    -0.0271105 -0.0336232 0.999067 217.569 
    -0.999632 1.0842e-19 -0.0271258 -6.71756 
     0.000912058 -0.999435 -0.0336108 5.86407 
     0 0 0 1 " 
    />
  </CoordinateDefinitions>

  <PlusOpenIGTLinkServer
    MaxNumberOfIgtlMessagesToSend="1"
    MaxTimeSpentWithProcessingMs="50"
    ListeningPort="18944"
    SendValidTransformsOnly="true"
    OutputChannelId="TrackedVideoStream" >
    <DefaultClientInfo>
      <MessageTypes>
        <Message Type="IMAGE" />
        <Message Type="TRANSFORM" />
      </MessageTypes>
      <TransformNames>
        <!-- The following transforms are to check if these markers are visible to the camera -->
        <Transform Name="ProbeToTracker" />
        <Transform Name="ReferenceToTracker" />
        <Transform Name="NeedleToTracker" />
        <Transform Name="NeedleToProbe" />  <!-- for calibration -->      
        <Transform Name="ReferenceToProbe" />    <!-- For Image to Probe calibration with needle as stylus -->
		    <Transform Name="NeedleToReference" />
		    <Transform Name="ImageToReference" /> <!-- Only for debugging! -->
        <Transform Name="ProbeToReference" />
        <Transform Name="ProbeToNeedle" />  <!-- For prediction and volume reconstruction -->
        <Transform Name="NeedleTipToNeedle" />
      </TransformNames>
      <ImageNames>
        <Image Name="Image" EmbeddedTransformToFrame="Image" />
      </ImageNames>
    </DefaultClientInfo>
  </PlusOpenIGTLinkServer>
</PlusConfiguration>